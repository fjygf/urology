.section {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #DDD;
  font-size: 30rpx;
  align-items: center;
}

.section text {
  flex: 1;
  padding-left: 10rpx;
  font-weight: bold;
  border-left: 10rpx solid #7ED321;
}

.section input {
  width: 400rpx;
  text-align: right;
}

.tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 30rpx;
  margin: 50rpx 50rpx 50rpx;
  color: #9B9B9B;
}

button{
  margin:30px auto 0;
}
.result{
  width:200px;
  margin:20px auto;
  text-align: center;
}